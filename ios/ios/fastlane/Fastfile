default_platform(:ios)

platform :ios do
  lane :submit_review do
    app_store_connect_api_key(
      api_key_path: "./api_key.json"
    )

    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      submit_for_review: true,
      automatic_release: false,
      force: true
    )
  end
end
